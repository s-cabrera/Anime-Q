  <div id='login-container' class='container text-center w-25 border py-5'>
    <div class='title pb-5'>
      <h1 class='font-weight-bold'>Login</h1>
      <span> Please enter username and password. </span>
    </div>
    <form class="login-form" action='#'>
      <div class='form-group1'>
        <input
          id='email-login'
          type='email'
          class='form-control'
          placeholder='Email'
          name='email'
        />
      </div>
      <div class='form-group1'>
        <input
          id='password-login'
          type='password'
          class='form-control'
          name='password'
          placeholder='Password'
        />
      </div>
      <div class='alert-container'>
        <div id='missing-alert' class='alert alert-danger d-none' role='alert'></div>
      </div>

      <button type='submit' class='btn btn-success rounded-pill'>Submit</button>

      <button type='button' id="signup-btn" class='btn btn-success2 rounded-pill'>Sign Up</button>

    </form>
  </div>
{{!-- </div> --}}

<script src='/js/login.js'></script>