<div class='text-center center-div' id='login'>
  <div id='login-container' class='container w-25 border py-5'>
    <div class='title pb-5'>
      <h2 class='font-weight-bold'>Login System</h2>
      <span> Log in for existing users</span>
    </div>
    <form action='#'>
      <div class='form-group1'>
        <input
          type='email'
          class='form-control'
          placeholder='email'
          name='email'
        />
        {{!-- <small class='form-text text-muted text-left'>Register email address</small> --}}
      </div>
      <div class='form-group2'>
        <input
          type='password'
          class='form-control'
          name='password'
          placeholder='password'
        />
      </div>
        <div class='invisible alert-container'>
            <div id='missing-alert' class='alert alert-danger' role='alert'>
                Login Failed: Missing username or password
        </div>
      </div>
      <button type='submit' class='btn btn-success rounded-pill'>Submit</button>
    </form>
  </div>
</div>

<script src='/js/login.js'></script>