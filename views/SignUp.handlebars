<div id="sign-up-container" class="container w-25 border py-5">
  <h2 class="font-weight-bold">Sign Up</h2>

  <form action='#' class="form signup-form">
    <div class='form-group1'>
      <input
        id='first-name-signup'
        type='text'
        class='form-control'
        placeholder='First Name'
        name='first name'
      />
    </div>
    <div class='form-group1'>
      <input
        id='last-name-signup'
        type='text'
        class='form-control'
        placeholder='Last Name'
        name='last name'
      />
    </div>
    <div class='form-group1'>
      <input
        id='email-signup'
        type='email'
        class='form-control'
        placeholder='Email'
        name='email'
      />
    </div>
    <div class='form-group1'>
      <input
        id='password-signup'
        type='password'
        class='form-control'
        name='password'
        placeholder='Password'
      />
    </div>

 
    <div>
      <div id="missing-fields" class="alert alert-danger d-none" role="alert"></div>
    </div>

    <button type='submit' class='btn btn-success rounded-pill'>Submit</button>

    <button type='button' id="login-btn" class='btn btn-success2 rounded-pill'>Login</button>
  </form>

</div>


<script src='/js/signup.js'></script>